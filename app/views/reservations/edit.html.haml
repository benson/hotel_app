- provide(:title, "Creating Reservation") 
%h1 Edit Reservation

.row
  .span6.offset3
    = form_for @reservation do |f| 
      = render 'shared/error_messages', object: f.object
      = f.label :start_date
      = f.text_field :start_date 
      = f.label :end_date
      = f.text_field :end_date 
      = f.label :company
      = f.collection_select :company_id, Company.all, :id, :name, {include_blank: true}, {class: "chzn-select", :'data-placeholder' => "None"}
      = f.label :customer
      = f.collection_select :customer_ids, Customer.all, :id, :full_name, {include_blank: false}, {class: "chzn-select", :'data-placeholder' => "Select one or more customers", multiple: true}
      = f.label :room
      = f.collection_select :room_id, Room.all, :id, :name,  {include_blank: false}, {class: "chzn-select", :'data-placeholder' => "Select one or more rooms", multiple: false}

      = f.submit "Update reservation!", class: "btn btn-large btn-primary"
      = link_to "Back", :back, class: "btn btn-large pull-right"