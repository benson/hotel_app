%h1 Sign Up

.row
  .span6.offset3
    = form_for @user do |f| 
      = render 'shared/error_messages'
      = f.label :email 
      = f.text_field :email 
      = f.label :password 
      = f.password_field :password 
      = f.label :password_confirmation 
      = f.password_field :password_confirmation 

      = f.submit "Create account!", class: "btn btn-large btn-primary"