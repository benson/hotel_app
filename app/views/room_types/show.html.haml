.row
  .span6.offset3
    .notecard
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th.header-icon#user
              %i.icon-money
            %th.nameplate{colspan:"3"}= @room_type.name
        %tbody
          %tr
            %td{colspan:"2"}Name
            %td{colspan:"2"}= @room_type.name
          %tr
            %td{colspan:"2"}Rate
            %td{colspan:"2"}= number_to_currency(@room_type.price, precision: 2, :locale => "es-PE")
          %tr
            %td{colspan:"2"}Guests
            %td{colspan:"2"}= @room_type.spaces
       

    = link_to @room_type, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger pull-right" do
      %i.icon-minus-sign
      Delete
    = link_to edit_room_type_path, class: "btn pull-left" do
      %i.icon-edit
      Edit