%h1 Edit Room Type

.row
  .span6.offset3
    = form_for @room_type do |f| 
      = render 'shared/error_messages', object: f.object
      = f.label :name 
      = f.text_field :name 
      = f.label :spaces 
      = f.text_field :spaces 

      = f.label :price
      .input-prepend
        %span.add-on S./  
        = f.text_field :price, style:"width: 432px"

      = f.submit "Update Room Type!", class: "btn btn-large btn-primary"