.row
  .span10.offset1
    .notecard
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th.header-icon#user
              %i.icon-user
            %th.nameplate{colspan:"3"}= @customer.both
        %tbody
          %tr
            %td{colspan:"2"}Name
            %td{colspan:"2"}= @customer.both
          %tr
            %td{colspan:"2"}Address
            %td{colspan:"2"}= @customer.one_line_address
          %tr
            %td{colspan:"2"}DNI/Passport Number
            %td{colspan:"2"}= @customer.number
          %tr
            %td{colspan:"2"}Company
            %td{colspan:"2"}= @customer.company.nil? ? "No company" : (link_to @customer.company.name, @customer.company)
      = link_to @customer, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger pull-right" do
        %i.icon-minus-sign
        Delete
      = link_to edit_customer_path, class: "btn pull-left" do
        %i.icon-edit
        Edit