.row
  .span6.offset3
    = form_for @customer do |f| 
      = render 'shared/error_messages', object: f.object
      %legend Edit Customer Info
      = f.label :first_name 
      = f.text_field :first_name 
      = f.label :last_name 
      = f.text_field :last_name 
      = f.label :number, 'DNI/Passport Number'
      = f.text_field :number 
      = f.label :address_line_1, 'Address'
      = f.text_field :address_line_1
      = f.label :address_line_2, 'City'
      = f.text_field :address_line_2
      = f.label :address_line_3, 'Country'
      = f.country_select :address_line_3, {}, {class: "chzn-select"}
      %legend.with-small
        Edit Customer Company
        %br
        %small Set to blank to remove company or if creating a new company
      = f.label :company, "Current Company"
      = f.collection_select :company_id, Company.all, :id, :name, {include_blank: true}, {class: "chzn-select", :'data-placeholder' => "None"}
      %legend.with-small
        Change to New Company
        %br
        %small Fill in to set customer's company to a new company
      = label_tag :company_name, "New Company Name"
      = text_field_tag :company_name
      = label_tag :company_number, "New Company Number"
      = text_field_tag :company_number

      = f.submit "Save changes!", class: "btn btn-large btn-primary"
      = link_to "Back", customers_path, class: "btn btn-large pull-right"